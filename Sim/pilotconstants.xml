   <entry name="FatigueModPerWoundFormulaConstants_Class2" type="int" value="1,500,100,0"/>
   <entry name="GTolBucketModPerWoundFormulaConstants_Class0" type="int" value="10,1,6,1,1,2"/>
   <entry name="GTolBucketModPerWoundFormulaConstants_Class1" type="int" value="20,2,6,2,1,2"/>
   <entry name="GTolBucketModPerWoundFormulaConstants_Class2" type="int" value="30,2,6,1,1,2"/>
   <entry name="LongTermEffectPerWoundFormulaConstants_Class0" type="int" value=" 0,0,0,1,0,1"/>
   <entry name="LongTermEffectPerWoundFormulaConstants_Class1" type="int" value=" 0,1,6,1,1,2"/>
