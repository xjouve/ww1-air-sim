			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="aileron_right"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="aileron_left"/>
				<System SystemID="aileron_right"/>
				<Stage Threshold_pct="90" OverallDamage="4"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="left_flap"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
				<Stage Threshold_pct="90" OverallDamage="3"/>
				<Stage Threshold_pct="100" OverallDamage="5"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="right_flap"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
				<Stage Threshold_pct="90" OverallDamage="3"/>
				<Stage Threshold_pct="100" OverallDamage="5"/>
			</OverallDamageRule>
		</OverallDamage>
                <Failure weight="1.0" masterdisable="n">
			<FailureRule SystemID="engine_one" average_hrs="90" damageAmount_pct="31" dump="y"/>
			<FailureRule SystemID="engine_one" average_hrs="120" damageAmount_pct="70" dump="y"/>
			<FailureRule SystemID="engine_one" average_hrs="160" damageAmount_pct="5" frequency_secs="111" dump="y"/>
			<FailureRule SystemID="engine_one" average_hrs="200" damageAmount_pct="9" frequency_secs="35" dump="y"/>

			<FailureRule SystemID="engine_two" average_hrs="90" damageAmount_pct="31" dump="y"/>
			<FailureRule SystemID="engine_two" average_hrs="120" damageAmount_pct="70" dump="y"/>
