			<FailureRule SystemID="oil_reservoir" average_hrs="95" damageAmount_pct="50" dump="y"/>
		</Failure>
<Stress overG_secs="30" overspeed_wingTip_secs="15" overspeed_wing_secs="20"/>
		<DamageRamps>
			<DamageRamp SystemID="engine_one">
				<Item x="30" y="0"/>
				<Item x="60" y="100"/>
			</DamageRamp>
			<DamageRamp SystemID="engine_two">
				<Item x="30" y="0"/>
				<Item x="60" y="100"/>
			</DamageRamp>
		</DamageRamps>
