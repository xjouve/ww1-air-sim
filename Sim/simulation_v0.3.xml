				<Stage Threshold_pct="10" OverallDamage="2"/>
				<Stage Threshold_pct="50" OverallDamage="5"/>
				<Stage Threshold_pct="90" OverallDamage="8"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="center_fuel_tank" Fire="10"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="left_wing"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
				<Stage Threshold_pct="90" OverallDamage="3"/>
				<Stage Threshold_pct="100" OverallDamage="5"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="right_wing"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
				<Stage Threshold_pct="90" OverallDamage="3"/>
				<Stage Threshold_pct="100" OverallDamage="5"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="elevator_left"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
			</OverallDamageRule>
			<OverallDamageRule>
				<System SystemID="elevator_right"/>
				<Stage Threshold_pct="50" OverallDamage="2"/>
			</OverallDamageRule>
