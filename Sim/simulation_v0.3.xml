	<Bumps
		windSmoothPeriod_secs="5"
                localWindScaleVert_pct="100"
                localWindScaleHorz_pct="10"
		localWindFieldPerAircraft="y"
                clearTurbulenceScale_pct="100"
                cloudTurbulenceScale_pct="100"
                groundBumpsVerticalScale_pct="50"
                groundBumpsPitchScale_pct="100"
                groundBumpsRollScale_pct="300"
		/>
	<AI
        SHOOTING_RANGE_met="95"
        COLLISION_RANGE_met="250"
        MIN_AGL_met="150">
		
		
        <!-- v0.3 Vision
		acePlusFactor must be between 2.0 and 0.9 
		aceFactor must be between     1.5 and 0.9
		veteranFactor must be between 1.0 and 0.5
		noviceFactor must be between  1 and 0.5
		-->
                        <!-- acePlusFactor="1.25" --> 
                        <!-- aceFactor="1.0" -->
                        <!-- veteranFactor="0.9" -->
                        <!-- noviceFactor="0.75" -->
		<Vision
            offensiveSearchCycle_secs="6"
            defensiveSearchCycle_secs="6"
            groundSearchCycle_secs="11"

			imperfect="y"

            maxRange_met="4000"
            perfectRange_met="3000"
			maxRangeFactor="0.0"

			pilotSightLine_deg="-25"
			pilotBestAngle_deg="45"
			pilotBestAngleFactor="1.0"
			pilotWorstAngle_deg="30"
			pilotWorstAngleFactor="0.1"

			observerSightLine_deg="-25"
			observerBestAngle_deg="60"
			observerBestAngleFactor="1.0"
			observerWorstAngle_deg="30"
			observerWorstAngleFactor="0.15"

            acePlusFactor   ="1.50"
            aceFactor       ="0.90"
            veteranFactor   ="0.50"
            noviceFactor    ="0.10"

			weatherLinear="y"

			offensiveSearch="y"
			defensiveSearch="y"
			defensiveReaction="y"/>
		<Airfield
			runwayLaneMinWidth_met="15"
			runwayBuffer_met="100"
			min_descentAngle_deg="4.5"
			max_descentAngle_deg="6"
			parkingSpaceLength_met="15"
			takeoffSpaceLength_met="15"
			orbitLaneMinWidth_met="50"/>
		<Takeoff
            engineStartRandomDelay_secs="7"
			singleEngineStart_secs="8"
                        minSpread_secs="3"
                        maxSpread_secs="7"
                        minSpreadFormation_secs="2"
                        maxSpreadFormation_secs="4"
			obstacleRetry_secs="5"
			liftTailEffort="1.0"
			climbOutAGL_met="150"
			climbOutEffort="1.0"/>

		<!-- v0.2 Maneuvers
			altitudeWt= ??
			damageWt= the more, the longer the fight
			moraleWt= the less, ...
			skillWt= the less, ...
			strengthWt= the less, ...
			locationWt= the less, ...
			turnWt= ??
			climbWt= ??
			speedWt= ??
			underAttackWt= ??
			runningWt= ??
			escortWt= ??

			fightThreshold="2"
			continueOnThreshold="1.5"
		-->
		<Formation_fighter_v_fighter
		
		    neverBackDown="n"
            altitudeWt="3" 
			damageWt="5"
			moraleWt="5"
			skillWt="1" 
			strengthWt="1"
			locationWt="30"
			turnWt="1"
			climbWt="1"
			speedWt="1"
			underAttackWt="1"
			runningWt="-5"
			escortWt="1"

			fightThreshold="2"
			continueOnThreshold="1.5"			/>
		<!-- else run away-->

		<Formation_fighter_v_bomber
                        neverBackDown="n"

			altitudeWt="1"
			damageWt="1"
			moraleWt="20"
			skillWt="1"
			strengthWt="1"
			locationWt="20"
			runningWt="-5"
			escortWt="-3"

			fightThreshold="0"/>
		<!-- else continue on-->


		<Formation_tactical_v_fighter
                        neverBackDown="n"

			altitudeWt="1"
			damageWt="1"
			moraleWt="1"
			skillWt="1"
			strengthWt="2"
			locationWt="1"
			soloWt="-2"

			continueOnThreshold="0"
			goHomeThreshold="-2"/>
		<!-- else run away-->

		<Formation_heavy_v_fighter
                        neverBackDown="n"

			altitudeWt="1"
			damageWt="1"
			moraleWt="1"
			skillWt="1"
			strengthWt="1"
			locationWt="1"
			soloWt="-2"

			continueOnThreshold="-5"/>
		<!-- else go home-->

		<!-- <Individual_fighter_v_fighter -->
            <!-- neverBackDown="n" -->
			<!-- acDamageWt="0" -->
			<!-- engineDamageWt="0" -->
			<!-- pilotDamageWt="0" -->
			<!-- moraleWt="0" -->
			<!-- fatigueWt="0" -->
            <!-- locationWt="10" -->
            <!-- groundProximityWt="0" -->
            <!-- groundProximityThreshold_met="300" -->
			<!-- skillWt="0" -->
			<!-- escortWt="0" -->

			<!-- fightThreshold="-1" -->
			<!-- withdrawThreshold="-2"/> -->
			
		<Individual_fighter_v_fighter
            neverBackDown="n"
			acDamageWt="5"
			engineDamageWt="5"
			pilotDamageWt="5"
			moraleWt="8"
			fatigueWt="40"
            locationWt="30"
            groundProximityWt="20"
            groundProximityThreshold_met="1000"
			skillWt="1"
			escortWt="0"

			fightThreshold="2"
			withdrawThreshold="1.5"/>
		<!-- else go home-->

		<Individual_fighter_v_bomber
            neverBackDown="n"
			acDamageWt="1"
			engineDamageWt="5"
			pilotDamageWt="5"
			moraleWt="1"
			skillWt="1"
		    fatigueWt="40"
            locationWt="10"
            groundProximityWt="1"
            groundProximityThreshold_met="1500"
			restartsWithoutProgressWt="1"
			timeWithoutProgressWt="1"
			totalTimeWt="1"

			fightThreshold="1"/>
		<!-- else withdraw-->

		<Individual_fighter_v_airship
                        neverBackDown="n"
            		acDamageWt="1"
            		engineDamageWt="5"
            		pilotDamageWt="5"
            		moraleWt="1"
            		skillWt="1"
            		fatigueWt="10"
            		locationWt="1"
            		groundProximityWt="1"
            		groundProximityThreshold_met="300"
            		restartsWithoutProgressWt="0.2"
            		timeWithoutProgressWt="0.2"
            		totalTimeWt="0.2"
            		fightThreshold="0"/>



		<Individual_v_ground
                        neverBackDown="n"

			acDamageWt="1"
			engineDamageWt="10"
			pilotDamageWt="10"
			moraleWt="1"
			skillWt="1"

			continueThreshold="0"/>
		<!-- else withdraw-->


		<Individual_transit
                        neverBackDown="n"

			acDamageWt="1"
			engineDamageWt="10"
			pilotDamageWt="10"
			moraleWt="1"
			skillWt="1"

			continueThreshold="0"/>
		<!-- else withdraw-->
        <!-- v0.1 Maneuvers
		acePlusEffort must be between 1 and 0.9 
		aceEffort must be between     1 and 0.9 
		noviceEffort must be between  1 and 0.5 
		tactics must be between       0 and 1.0
		substitute required when any < 1.0
		-->
		<Maneuvers
			acePlusEffort="1.00" 
			aceEffort    ="0.90"
			veteranEffort="0.75"
			noviceEffort ="0.50">

			<Boom         acePlus="1.00" ace="0.75" veteran="0.50" novice="0.00" substitute="Pursuit"/>
			<BoomF        acePlus="1.00" ace="0.75" veteran="0.50" novice="0.00" substitute="PursuitF"/>			
			<Chandelle    acePlus="1.00" ace="1.00" veteran="1.00" novice="0.50" substitute="Pursuit"/>
			<HeadOn       acePlus="0.25" ace="0.10" veteran="0.00" novice="0.05" substitute="WidePass"/>
			<Intercept    acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>
			<InterceptF   acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>			
			<Pursuit      acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>
			<PursuitB     acePlus="0.00" ace="0.00" veteran="0.00" novice="0.00" substitute="Pursuit"/>
			<PursuitF     acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>			
			<ReverseUnder acePlus="1.00" ace="0.80" veteran="0.50" novice="0.00" substitute="Pursuit"/>
			<!-- <ReverseUp    acePlus="1.00" ace="1.00" veteran="0.00" novice="0.00" substitute="Pursuit"/> -->
			<SideSlip     acePlus="1.00" ace="0.85" veteran="0.50" novice="0.00" substitute="Pursuit"/>
			<SpiralInF    acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>			
			<Stagger      acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>
			<Stall        acePlus="0.20" ace="0.60" veteran="0.95" novice="1.00" substitute="Pursuit"/>
			<Virage       acePlus="1.00" ace="1.00" veteran="0.50" novice="0.20" substitute="Pursuit"/>
			<Vrille       acePlus="0.60" ace="0.80" veteran="1.00" novice="0.80" substitute="Pursuit"/>
			<WidePass     acePlus="1.00" ace="1.00" veteran="1.00" novice="1.00"/>

		</Maneuvers>

		<Damage
			adaptControlsToDamage="y"
                        skillReducedByDamage="y"/>


	</AI>
